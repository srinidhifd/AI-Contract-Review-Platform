{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python3.11 -m venv --copies /opt/venv && . /opt/venv/bin/activate && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python3.11 start.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}


