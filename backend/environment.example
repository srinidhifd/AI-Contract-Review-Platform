# AI Contract Review Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED SETTINGS - You must provide these values
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# MongoDB Atlas Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/contract_review
MONGODB_DATABASE=contract_review

# JWT Security
SECRET_KEY=your_super_secure_jwt_secret_key_here_minimum_32_characters

# =============================================================================
# OPTIONAL SETTINGS - Defaults are provided
# =============================================================================

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
APP_NAME=AI Contract Review Platform
VERSION=2.0.0

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.docx,.doc,.txt
UPLOAD_DIR=uploads

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=AI Contract Review Platform

# Authentication Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256